@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Baseline Tennis</title>
    <meta charset="utf-8">
    <link rel="" type="image/x-icon" src="@Url.Content("~/Content/Images/Black_White.svg")">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <!-- CSS, Bootstrap, Poppins font, and Sweetalert stylesheets-->
    <link href="~/Content/css/login.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.min.css" rel="stylesheet" integrity="sha256-KIZHD6c6Nkk0tgsncHeNNwvNU1TX8YzPrYn01ltQwFg=" crossorigin="anonymous">
</head>
<body>
    <div id="content" class="container d-flex justify-content-center align-items-center">
        <div class="row w-100 d-flex justify-content-center align-items-center">
            <div id="imgHolder" class="col-md-6 d-flex justify-content-center align-items-center">
                <img id="logo" src="@Url.Content("~/Content/Images/Black_White.svg")" alt="Baseline Tennis Logo.svg">
            </div>
            <div id="credHolder" class="col-md-6 d-flex flex-column justify-content-center">
                <div class="p-5">
                    <h1 class="mb-1 text-white">Welcome to Baseline Tennis!</h1>
                    <p class="mb-4 text-white">One stop shop for your Tennis needs!</p>
                    <form id="verifyForm" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="emailOrUsername" placeholder="Email or Username" required>
                            <label for="emailOrUsername">Email or Username</label>
                        </div>
                        <div class="input-group position-relative">
                            <div class="form-floating flex-grow-1">
                                <input type="password" class="form-control" id="password" placeholder="Password" maxlength="16" required>
                                <label for="password">Password</label>
                            </div>
                            <button type="button" id="togglePassword" class="btn btn-light position-absolute" style="right: 150px; height: 100%;">
                                <img id="eyeIcon" src="@Url.Content("~/Content/Images/closed_eye.svg")" alt="Show Password">
                            </button>
                        </div>
                        <a class="link-danger link-underline-opacity-50 link-opacity-50 link-underline-opacity-100-hover link-opacity-100-hover" data-bs-toggle="modal" data-bs-target="#forgotPassword">Forgot Password?</a>
                    </form>
                    <input class="btn btn-primary" type="submit" value="Login">
                    <a class="link-success link-underline-opacity-50 link-opacity-50 link-underline-opacity-100-hover link-opacity-100-hover" data-bs-toggle="modal" data-bs-target="#createAccount">Create Account</a>
                </div>
            </div>
        </div>

        <!-- Create Account Modal -->
        <div class="modal fade" id="createAccount" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Create Account</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Forgot Password Modal -->
        <div class="modal fade" id="forgotPassword" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Forgot Password</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../../Scripts/projectScripts/auth.js"></script>
    <script src="../../Scripts/projectScripts/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.all.min.js" integrity="sha256-rTq0xiLu1Njw5mB3ky3DZhpI5WhYdkNlQbGXUc0Si6E=" crossorigin="anonymous"></script>
</body>
</html>